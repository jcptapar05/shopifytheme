<h2 style="text-align: {{ section.settings.title_alignment }}">{{ section.settings.title }}</h2>

{% for block in section.blocks %}
  {% if block.type == 'promotions' %}
    <div>
      <h3>{{ block.settings.title }}</h3>
      {{ block.settings.image | image_url: width: 400 | image_tag }}
    </div>
  {% endif %}
{% endfor %}

{% schema %}
{
  "name": "Promotion Group",
  "tag": "section",
  "class": "my-wrapper-class",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "title"
    },
    {
      "type": "select",
      "label": "Title Alignment",
      "id": "title_alignment",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "promotions",
      "name": "Promotions",
      "settings": [
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotion Group"
    }
  ]
}
{% endschema %}
